{
  "title": "A JSON Schema for apis.json, version 0.14",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "maintainer": {
      "description": "The person or organization responsible for maintaining the API",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "apis": {
      "description": "The description of the API",
      "oneOf": [
        {
          "required": [ "$ref" ],
          "properties": {
            "$ref": {
              "type": "string"
            }
          }
        },
        {
          "required": [
            "name", "description", "image", "humanURL", "urls", "contact"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "image": {
              "type": "string"
            },
            "humanUrl": {
              "type": "string"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "urls": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/urls"
              }
            },
            "contact": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/contact"
              }
            },
            "meta": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/metaInformation"
              }
            }
          }
        }
      ]
    },
    "metaInformation": {
      "description": "Metadata about the API",
      "required": [
        "key", "value"
      ],
      "properties": {
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "contact": {
      "description": "Information on contacting the API support",
      "required": [
        "type", "url"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "twitter"
          ]
        },
        "url": {
          "type": "string",
          "pattern": "^(http)|(https)://(.*)$"
        }
      }
    },
    "urls": {
      "description": "A representation of a URL",
      "required": [
        "type", "url"
      ],
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^(portal)$|^(console)$|^(signup)$|^(libraries)$|^(swagger)$|^(X-[a-z0-9\\-]*)$"
        },
        "url": {
          "type": "string",
          "pattern": "^(http)|(https)://(.*)$"
        }
      }
    },
    "tags": {
      "description": "A consistent set of tag to apply to a description",
      "pattern": "^(photo)$|^(upload)$|^(marketplace)$|^(X-[a-z0-9\\-]*)$"
    }
  },
  "required": [
    "name", "description", "type", "url", "apis", "maintainer", "tags"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the service described"
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "apis": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/apis"
      }
    },
    "maintainer": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/maintainer"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/tags"
      }
    },
    "definitions": {}
  }
}
